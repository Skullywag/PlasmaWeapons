  <RecipeDef>
    <defName>RepairPlasmaPistol</defName>
    <label>repair Plasma Pistol</label>
    <description>Use plasteel and components to repair a Plasma pistol.</description>
    <jobString>Repairing plasma pistol.</jobString>
    <workAmount>1500</workAmount>
    <workSpeedStat>SmithingSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <skillRequirements>
      <li>
        <skill>Crafting</skill>
        <minLevel>12</minLevel>
      </li>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
    <recipeUsers>
      <li>TableMachining</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Plasteel</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Component</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Gun_PlasmaPistol</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
      <Gun_PlasmaPistol>1</Gun_PlasmaPistol>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Plasteel</li>
        <li>Component</li>
        <li>Gun_PlasmaPistol</li>
      </thingDefs>
    </fixedIngredientFilter>
  </RecipeDef>

